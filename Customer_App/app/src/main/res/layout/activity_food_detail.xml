<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetailActivity">



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                style="@style/textViewStyle"
                android:text="title"
                android:layout_marginTop="@dimen/dp_30"
                android:textSize="@dimen/semi_title" />


            <ImageView
                android:id="@+id/imgFood"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/pizza"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgMinus"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/txtCount"
                    style="@style/textViewStyle"
                    android:layout_margin="@dimen/dp_16"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/plus" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:id="@+id/txtPriceSymbol"
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_20"/>

                <TextView
                    android:id="@+id/txtPrice"
                    style="@style/textViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:text="@string/_0_0"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_20" />

            </LinearLayout>
            <TextView
                android:id="@+id/txtDescriptionTitle"
                style="@style/textViewStyle"
                android:layout_margin="16dp"
                android:textAlignment="viewStart"
                android:text="@string/description"
                android:textSize="@dimen/text_20" />
            <TextView
                android:id="@+id/txtDescription"
                style="@style/textViewStyle"
                android:textAlignment="viewStart"
                android:justificationMode="inter_word"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_16"
                android:text="abc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abcabc abc"
               android:textColor="@color/ash"
                />

            <TextView
                android:id="@+id/txtExtrasTitle"
                style="@style/textViewStyle"
                android:layout_margin="16dp"
                android:textAlignment="viewStart"
                android:text="@string/extra"
                android:textSize="@dimen/text_20" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewExtras"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="true"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="80dp"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddToCart"
        style="@style/buttonStyle"
        android:text="@string/add_to_cart"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>
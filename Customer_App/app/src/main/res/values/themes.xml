<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MaaMagic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MaaMagic" parent="Base.Theme.MaaMagic" />

<!--    Text view-->
    <style name="textViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- Define a custom style for the LinearLayout -->
    <style name="MyLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:elevation">@dimen/dp_3</item>
        <item name="android:padding">@dimen/dp_10</item>
    </style>

<!--  Image view  -->
    <style name="CircularImageView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/circular_shape</item>
    </style>

    <!--    Button-->
    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:backgroundTint">@color/darkOrange</item>
    </style>


</resources>
